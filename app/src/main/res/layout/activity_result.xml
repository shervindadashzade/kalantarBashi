<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/ic_ellipse"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="در برابر"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="70dp">
        <ImageView
            android:id="@+id/meFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/meId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:text="sherivin dadashzade"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/meResImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_gun"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="70dp">
        <ImageView
            android:id="@+id/rivalImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/rivalId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:text="sherivin dadashzade"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/rivalResImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dead"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp">
        <TextView
            android:id="@+id/mePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="72dp"
            android:textColor="#ffff"
            android:layout_marginRight="90dp"/>
        <TextView
            android:id="@+id/rivalPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="72dp"
            android:textColor="#ffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/rePlayGame"
            android:layout_width="212dp"
            android:layout_height="42dp"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:text="بازی دوباره"
            android:textSize="18dp"
            android:drawableRight="@drawable/ic_refresh"
            android:padding="10dp"
            android:drawablePadding="0dp"
            android:layout_marginRight="110dp"
            />
        <Button
            android:layout_width="212dp"
            android:layout_height="42dp"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:text="باز پخش بازی"
            android:textSize="18dp"
            android:drawableRight="@drawable/ic_cardboard"
            android:padding="10dp"
            android:drawablePadding="0dp"
            />
    </LinearLayout>
</RelativeLayout>