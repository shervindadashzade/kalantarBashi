<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff">
 <ImageView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:srcCompat="@drawable/ic_backeclipse"
     android:layout_marginLeft="83dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kalantarBashi"
        android:text="کلانتر باشی"
        android:textSize="64dp"
        android:textColor="#25110B"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />
    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="اول باید انتخاب کنید بازی تو زمین کی انجام بشه بعد روبرو همدیگه می ایستید و منتظر دستور شلیک میشید شلیک با دکمه افزایش ولوم انجام میشه و اولین کسی که در زاویه درست و زودتر شلیک کنه برنده بازی هستش"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/kalantarBashi"
        android:paddingTop="127dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
    <Button
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:text="بزن بریم"
        android:id="@+id/letsGo"
        android:textSize="18dp"
        android:textColor="#7D290E"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:drawableRight="@drawable/ic_arrow"
        android:stateListAnimator="@null"
        />
</RelativeLayout>